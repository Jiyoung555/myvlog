{{>layouts/header}}

<div class = "jumbotron">
    <h1>Article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>

<!-- Article 상세보기 테이블 -->
<table class = "table table-hover">
    {{#article}}
        <tbody>
            <tr>
                <th>#</th>
                <td>{{id}}</td>
            </tr>

            <tr>
                <th>제목</th>
                <td>{{title}}</td>
            </tr>

            <tr>
                <th>내용</th>
                <td>{{content}}</td>
            </tr>
        </tbody>

        <tfoot>
            <tr>
                <th></th>
                <td>
                    <a href = "/articles/edit/{{id}}" class = btn btn-info>수정</a>
                    <button type="button" class="btn btn-danger" id="article-destroy-btn">삭제</button>
                </td>
            </tr>
        </tfoot>
    {{/article}}
</table>

<!-- 댓글 -->
{{>comments/_comments}}


<a href ="/articles" class="btn btn-success btn-block">목록으로</a>

<Script src = "/js/app/article.js"></script>

{{>layouts/footer}}